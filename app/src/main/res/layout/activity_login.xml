<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_root_iv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_logo_iv"
        android:layout_width="@dimen/hight_100"
        android:layout_height="@dimen/hight_100"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/hight_80"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <ScrollView
        android:id="@+id/login_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/hight_15"
        android:layout_marginRight="@dimen/hight_15"
        android:fillViewport="true"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/login_content_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="200dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/hight_13">

                <ImageView
                    android:layout_width="@dimen/hight_18"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_mobile_flag" />

                <EditText
                    android:id="@+id/login_mobile_et"
                    android:layout_width="@dimen/hight_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入用户名"
                    android:inputType="textVisiblePassword"
                    android:maxLength="11"
                    android:paddingLeft="@dimen/hight_15"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/darkgray"
                    android:textColorHint="@color/darkgray"
                    android:textSize="@dimen/font_14" />

                <ImageView
                    android:id="@+id/login_clean_phone"
                    android:layout_width="@dimen/hight_35"
                    android:layout_height="match_parent"
                    android:padding="@dimen/hight_10"
                    android:src="@mipmap/ic_clear"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_px"
                android:background="@color/e0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/hight_13">

                <ImageView
                    android:layout_width="@dimen/hight_18"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_password_flag" />

                <EditText
                    android:id="@+id/login_password_et"
                    android:layout_width="@dimen/hight_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:paddingLeft="@dimen/hight_15"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/darkgray"
                    android:textColorHint="@color/darkgray"
                    android:textSize="@dimen/font_14" />

                <ImageView
                    android:id="@+id/login_clean_password"
                    android:layout_width="@dimen/hight_35"
                    android:layout_height="match_parent"
                    android:padding="@dimen/hight_10"
                    android:src="@mipmap/ic_clear"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/login_show_pwd"
                    android:layout_width="@dimen/hight_35"
                    android:layout_height="match_parent"
                    android:padding="@dimen/hight_10"
                    android:src="@mipmap/pass_gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_px"
                android:background="@color/e0" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_45"
                android:layout_marginBottom="@dimen/hight_10"
                android:layout_marginTop="@dimen/hight_20"
                android:background="@drawable/btn_red_selected"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/login_regist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/hight_10"
                    android:layout_weight="1"
                    android:text="注册新用户"
                    android:textColor="#b0b8b2"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/login_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/hight_10"
                    android:layout_marginLeft="@dimen/hight_20"
                    android:text="忘记密码"
                    android:textColor="#b0b8b2"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/login_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/hight_10">

        <TextView
            android:id="@+id/login_contact_customer_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="联系客服"
            android:textColor="#b0b8b2"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="@dimen/default_dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/hight_10"
            android:layout_marginRight="@dimen/hight_10"
            android:background="@color/e0" />

        <TextView
            android:id="@+id/login_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="关于我们"
            android:textColor="#b0b8b2"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

</RelativeLayout>